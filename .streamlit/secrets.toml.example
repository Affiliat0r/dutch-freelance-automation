# Example secrets file for Streamlit Cloud deployment
# Copy the structure below to configure your secrets in Streamlit Cloud UI

# Required: Google Gemini API Key
GEMINI_API_KEY = "your-gemini-api-key-here"

# Required: Secret key for security
SECRET_KEY = "your-secret-key-here"

# Optional: Database URL (defaults to SQLite if not provided)
# DATABASE_URL = "postgresql://user:password@host:port/database"

# Optional: Environment setting
# ENVIRONMENT = "production"
